


const db = require('../database');

const tilitapahtumat = {
  getById: function(id, callback) {
    return db.query('select * from tilitapahtumat where tili_idtili=?', [id], callback);
  },
  getAll: function(callback) {
    return db.query('select * from tilitapahtumat', callback);
  },
  add: function(tilitapahtumat, callback) {
    return db.query(
      'insert into tilitapahtumat (summa,pvm) values(?,?)',
      [tilitapahtumat.summa, tilitapahtumat.pvm],
      callback
    );
  },
  delete: function(id, callback) {
    return db.query('delete from tilitapahtumat where tili_idtili=?', [id], callback);
  },
  update: function(tili_idtili, tilitapahtumat, callback) {
    return db.query(
      'update tilitapahtumat set summa=?,pvm=? where tili_idtili=?',
      [tilitapahtumat.summa, tilitapahtumat.pvm,tilitapahtumat.tili_idtili],
      callback
    );
  }
};
module.exports = tilitapahtumat;
